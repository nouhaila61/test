/**
 * handle_char - Handles the 'c' format specifier
 * @args: The argument list containing the character to be printed
 *
 * Return: The number of characters printed
 */
int handle_char(va_list args);

/**
 * handle_string - Handles the 's' format specifier
 * @args: The argument list containing the string to be printed
 *
 * Return: The number of characters printed
 */
int handle_string(va_list args);

/**
 * handle_integer - Handles the 'd' and 'i' format specifiers
 * @args: The argument list containing the integer to be printed
 *
 * Return: The number of characters printed
 */
int handle_integer(va_list args);

/**
 * handle_percent - Handles the '%%' format specifier
 * @args: The argument list (unused)
 *
 * Return: The number of characters printed
 */
int handle_percent(va_list args);

/**
 * handle_unknown - Handles unknown format specifiers
 * @c: The unknown format specifier
 *
 * Return: The number of characters printed
 */
int handle_unknown(char c);

/**
 * len_num - Calculates the length of a number
 * @num: The number to calculate the length of
 *
 * Return: The length of the number
 */
int len_num(int num);

/**
 * _printf - Prints formatted output to stdout
 * @format: The format string to use
 * @...: Additional arguments for the format string
 *
 * Return: The number of characters printed
 */
int _printf(const char *format, ...);
